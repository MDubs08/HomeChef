<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Home Chef</title>
    <meta name="google-signin-client_id" content="228487129884-ariqngitss69qhmoe6bslrvrs1g28u6n.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home Chef", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Recipes", "Index", "Recipes")</li>
                    <li>@Html.ActionLink("Category", "Index", "Meals")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Recipes<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Home", "MyRecipes", "Home")</li>
                            <li>@Html.ActionLink("Shopping Cart", "Index", "CartItems")</li>
                            <li>@Html.ActionLink("My Account", "Index", "Manage")</li>
                            <li class="divider"></li>
                            <li><a href="#">@Html.ActionLink("Create Recipe", "Create", "Recipes")</a></li>
                            <li><a href="#">My Cookbook</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 footerleft ">
                    <h4 id="footerCompany">Home Chef</h4>
                    <p>Family owned since 1923 with a proud history of taking Grandma's recipes and claiming them as our own. You thought Apple was bad at taking ideas!</p>
                    <p><i class="fa fa-map-pin"></i>333 N Plankinton Ave, Milwaukee, WI 53203</p>
                    <p><i class="fa fa-phone"></i>Phone: (555) 867-5309</p>
                    <p><i class="fa fa-envelope"></i>E-mail : allthenope@gmail.com</p>
                    <p>&copy; @DateTime.Now.Year - Home Chef</p>
                </div>
                <div class="col-md-3 col-sm-3 footerleft ">
                    <h6>GENERAL LINKS</h6>
                    <ul class="footer-ul">
                        <li><a href="#"> Career</a></li>
                        <li><a href="#"> Privacy Policy</a></li>
                        <li><a href="#"> Terms & Conditions</a></li>
                        <li><a href="#"> Ranking</a></li>
                        <li><a href="#"> Case Studies</a></li>
                        <li><a href="#"> Frequently Ask Questions</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-md-3 footerleft">
                    <h6>SITE LINKS</h6>
                    <ul class="footer-ul">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Recipes", "Index", "Recipes")</li>
                        <li>@Html.ActionLink("Categories", "Index", "Meals")</li>
                        <li>@Html.ActionLink("Account", "Index", "Manage")</li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $(".dropdown-toggle").dropdown();
        });
    </script>
</body>
</html>
